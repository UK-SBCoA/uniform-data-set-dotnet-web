@page "{id:int?}"
@model UDS.Net.Forms.Pages.Visits.CreateModel
@{
    if (Model.Participation != null)
    {
        ViewData["Title"] = "Create visit for " + Model.Participation.LegacyId;
    }
    else
        ViewData["Title"] = "Create visit";
}

<div class="space-y-16 p-16 xl:space-y-20">

    <nav class="hidden sm:flex" aria-label="Breadcrumb">
        <ol role="list" class="flex items-center space-x-4">
            <li>
                <div class="flex">
                    <a asp-page="Participations/Index" class="text-sm font-medium text-gray-500 hover:text-gray-700">Participations</a>
                </div>
            </li>
            <li>
                <div class="flex items-center">
                    <svg class="h-5 w-5 flex-shrink-0 text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                        <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd"></path>
                    </svg>
                    <a asp-page="Participations/Details" asp-route-id="@Model.Participation.Id" class="ml-4 text-sm font-medium text-gray-500 hover:text-gray-700">Participation @Model.Participation.LegacyId</a>
                </div>
            </li>
        </ol>
    </nav>
    <form method="post">

        <div class="space-y-12 sm:space-y-16 mt-2">
            <div class="mt-10 space-y-8 pb-12 sm:space-y-0 sm:divide-y sm:divide-gray-900/10 sm:pb-0">

                <div>
                    <label asp-for="Visit.PACKET"></label>
                    <select asp-for="Visit.PACKET" asp-items="Model.VisitKindOptions" class="mt-2 block w-full rounded-md border-0 py-1.5 pl-3 pr-10 text-gray-900 ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-indigo-600 sm:text-sm sm:leading-6 valid">
                    </select>
                    <span class="mt-2 text-sm text-red-600" asp-validation-for="Visit.PACKET"></span>
                </div>

                <label asp-for="Visit.VISITNUM"></label>
                <input asp-for="Visit.VISITNUM" />

                <label asp-for="Visit.VISIT_DATE"></label>
                <input asp-for="Visit.VISIT_DATE" type="datetime-local" />

                <label asp-for="Visit.INITIALS"></label>
                <input asp-for="Visit.INITIALS" />

                <input asp-for="Visit.CreatedAt" type="hidden" />
                <input asp-for="Visit.CreatedBy" type="hidden" />
                <input asp-for="Visit.FORMVER" type="hidden" />

                <input type="hidden" asp-for="Visit.ParticipationId" />
                <button type="submit" class="rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Save</button>

            </div>
        </div>
    </form>
</div>