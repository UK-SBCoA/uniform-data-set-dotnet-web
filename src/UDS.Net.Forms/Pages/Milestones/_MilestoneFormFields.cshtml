@model MilestoneModel
@{
    string rowCSS = "sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:py-6";
    string pillNumberCSS = "inline-flex items-center rounded-full bg-gray-100 px-2.5 py-0.5 text-xs font-medium text-gray-800";
    string labelInstructionCSS = "text-base uppercase text-indigo-600 italic";
}


<div class="p-16 xl:space-y-20">
    <div class="@rowCSS">
        <div>
            <label asp-for="MILESTONETYPE">@Html.DisplayNameFor(model => model.MILESTONETYPE)</label>
            <span class="mt-2 text-sm text-red-600" asp-validation-for="@Model.MILESTONETYPE"></span>
        </div>
        <div class="mt-4 sm:col-span-2 sm:mt-0">
            <div>
                <radio-button-group id="@Html.IdFor(m => m.MILESTONETYPE)" for="@Model.MILESTONETYPE" items="Model.MilestoneTypeItems"></radio-button-group>
            </div>
        </div>
    </div>
</div>


<div class="boxA counterreset p-16 xl:space-y-20 bg-slate-50">
    <div class="text-center mb-20 w-full">
        <h2 class="mt-2 font-bold tracking-tight text-gray-900 sm:text-3xl">Box A</h2>
        <p class="text-base font-semibold leading-7 italic">Change with continued contact</p>
    </div>
    <div class="@rowCSS border-b">
        <div>
            <label class="text-base font-semibold text-gray-900"><span class="counter"></span> Date of status change</label>
        </div>
        <div class="sm:col-span-2">
            <div>
                <p class="text-sm text-gray-500">Unknown = 99/99/YEAR REQUIRED</p>
                <div class="mt-2 inline-block">
                    <div class="w-20">
                        <input placeholder="mm" asp-for="@Model.CHANGEMO" />
                    </div>
                </div>
                <div class="mt-2 inline-block">
                    <div class="w-20">
                        <input placeholder="dd" asp-for="@Model.CHANGEDY" />
                    </div>
                </div>
                <div class="mt-2 inline-block">
                    <div class="w-40">
                        <input placeholder="yyyy" asp-for="@Model.CHANGEYR" />
                    </div>
                </div>
            </div>
            <div>
                <span class="mt-2 text-sm text-red-600 block" asp-validation-for="@Model.CHANGEMO"></span>
                <span class="mt-2 text-sm text-red-600 block" asp-validation-for="@Model.CHANGEDY"></span>
                <span class="mt-2 text-sm text-red-600 block" asp-validation-for="@Model.CHANGEYR"></span>
            </div>
        </div>
    </div>
    <div>
        <div>
            <span class="text-base font-semibold text-indigo-600 italic">
                Complete the UDS and FTLD sections below, as appropriate.
            </span>
        </div>
    </div>
    <div>
        <div>
            <label class="text-base font-semibold leading-7 text-gray-900 sm:text-2xl"><span class="counter invisible"></span>UDS Status</label>
        </div>
        <div>
            <div class="w-14 border-t-2 border-indigo-600"></div>
        </div>
    </div>
    <div class="@rowCSS subcounterreset">
        <div>
            <label asp-for="PROTOCOL"><span class="subcounter"></span> @Html.DisplayNameFor(model => model.PROTOCOL) <small class="@labelInstructionCSS">(check one)</small></label>
            <span class="mt-2 text-sm text-red-600" asp-validation-for="@Model.PROTOCOL"></span>
        </div>
        <div class="mt-4 sm:col-span-1 sm:mt-0">
            <div class="flex items-center">
                <input asp-for="@Model.PROTOCOL" class="h-4 border-gray-400 text-indigo-600 focus:ring-indigo-600 disabled:bg-slate-50 disabled:text-slate-500 disabled:border-slate-200 disabled:shadow-none" data-affects="true" data-affects-targets="[ {&quot;ACONSENT&quot;: {&quot;disabled&quot;: &quot;false&quot;} } ]" id="PROTOCOL[0]" name="PROTOCOL" type="radio" value="1">
                <label class="ml-3 block text-sm font-medium leading-6 text-gray-900" for="PROTOCOL[0]">
                    <span class="inline-flex items-center rounded-full bg-gray-100 px-2.5 py-0.5 text-xs font-medium text-gray-800">1</span>
                    Annual UDS follow-up by telephone (CONTINUE TO QUESTION 2A1)
                </label>
            </div>

            <div class="relative flex items-start">
                <div class="flex items-center">
                    <input asp-for="@Model.PROTOCOL" class="h-4 border-gray-400 text-indigo-600 focus:ring-indigo-600 disabled:bg-slate-50 disabled:text-slate-500 disabled:border-slate-200 disabled:shadow-none" data-affects="true" data-affects-targets="[ {&quot;ACONSENT&quot;: {&quot;disabled&quot;: &quot;false&quot;} } ]" id="PROTOCOL[1]" name="PROTOCOL" type="radio" value="2">
                    <label class="ml-3 block text-sm font-medium leading-6 text-gray-900" for="PROTOCOL[1]">
                        <span class="inline-flex items-center rounded-full bg-gray-100 px-2.5 py-0.5 text-xs font-medium text-gray-800">2</span>
                        Minimal contact (CONTINUE TO QUESTION 2A1)
                    </label>
                </div>
            </div>

            <div>
                <small class="text-sm text-indigo-900 italic">
                    NOTE: Minimal contact status is reserved for participants who can no longer participate for one of the reasons listed in Question 2b, below.
                </small>
            </div>

            <div class="my-10 ml-20">
                <div class="subcounterreset">
                    <div>
                        <label asp-for="ACONSENT">2a1. @Html.DisplayNameFor(model => model.ACONSENT)</label>
                        <span class="mt-2 text-sm text-red-600" asp-validation-for="@Model.ACONSENT"></span>
                    </div>
                    <radio-button-group id="ACONSENT" for="ACONSENT" items="Model.AconsentItems"></radio-button-group>
                </div>
            </div>

            <div class="relative flex items-start">
                <div class="flex items-center">
                    <input asp-for="PROTOCOL" class="h-4 border-gray-400 text-indigo-600 focus:ring-indigo-600 disabled:bg-slate-50 disabled:text-slate-500 disabled:border-slate-200 disabled:shadow-none" data-affects="true" data-affects-targets="[ {&quot;ACONSENT&quot;: {&quot;disabled&quot;: &quot;true&quot;} } ]" id="PROTOCOL[2]" name="PROTOCOL" type="radio" value="3">
                    <label class="ml-3 block text-sm font-medium leading-6 text-gray-900" for="PROTOCOL[2]">
                        <span class="inline-flex items-center rounded-full bg-gray-100 px-2.5 py-0.5 text-xs font-medium text-gray-800">3</span>
                        Annual in-person UDS follow-up
                    </label>
                </div>
            </div>
        </div>
    </div>
    <div class="@rowCSS border-b">
        <div>
            <label class="text-base font-semibold text-gray-900"><span class="subcounter"></span>Reasons(s) for change indicated in Question 2a <small class="@labelInstructionCSS">(CHECK AT LEAST ONE)</small></label>
            <div>
                <span class="mt-2 text-sm text-red-600" asp-validation-for="@Model.ProtocolReasonValidation"></span>
            </div>
        </div>
        <div class="sm:col-span-2">
            <div class="counterreset flex items-top">
                <div>
                    @Html.CheckBox("RECOGIM", Model.RECOGIM, new { @class = "h-4 w-4 rounded border-gray-400 text-indigo-600 focus:ring-indigo-600 disabled:bg-slate-50 disabled:text-slate-500 disabled:border-slate-200 disabled:shadow-none" })
                </div>
                <div>
                    <label class="ml-3 block text-sm font-medium leading-6 text-gray-900" asp-for="RECOGIM"><span class="@pillNumberCSS">1</span> @Html.DisplayNameFor(Model => Model.RECOGIM)</label>
                </div>
            </div>
            <div class="flex items-top">
                <div>
                    @Html.CheckBox("REPHYILL", Model.REPHYILL, new { @class = "h-4 w-4 rounded border-gray-400 text-indigo-600 focus:ring-indigo-600 disabled:bg-slate-50 disabled:text-slate-500 disabled:border-slate-200 disabled:shadow-none" })
                </div>
                <div>
                    <label class="ml-3 block text-sm font-medium leading-6 text-gray-900" asp-for="REPHYILL"><span class="@pillNumberCSS">2</span> @Html.DisplayNameFor(Model => Model.REPHYILL)</label>
                </div>
            </div>
            <div class="flex items-top">
                <div>
                    @Html.CheckBox("REREFUSE", Model.REREFUSE, new { @class = "h-4 w-4 rounded border-gray-400 text-indigo-600 focus:ring-indigo-600 disabled:bg-slate-50 disabled:text-slate-500 disabled:border-slate-200 disabled:shadow-none" })
                </div>
                <div>
                    <label class="ml-3 block text-sm font-medium leading-6 text-gray-900" asp-for="REREFUSE"><span class="@pillNumberCSS">3</span> @Html.DisplayNameFor(Model => Model.REREFUSE)</label>
                </div>
            </div>
            <div class="flex items-top">
                <div>
                    @Html.CheckBox("RENAVAIL", Model.RENAVAIL, new { @class = "h-4 w-4 rounded border-gray-400 text-indigo-600 focus:ring-indigo-600 disabled:bg-slate-50 disabled:text-slate-500 disabled:border-slate-200 disabled:shadow-none" })
                </div>
                <div>
                    <label class="ml-3 block text-sm font-medium leading-6 text-gray-900" asp-for="RENAVAIL"><span class="@pillNumberCSS">4</span> @Html.DisplayNameFor(Model => Model.RENAVAIL)</label>
                </div>
            </div>
            <div class="flex items-top">
                <div>
                    @Html.CheckBox("RENURSE", Model.RENURSE, new { @class = "h-4 w-4 rounded border-gray-400 text-indigo-600 focus:ring-indigo-600 disabled:bg-slate-50 disabled:text-slate-500 disabled:border-slate-200 disabled:shadow-none", data_affects = "true", data_affects_toggle_targets = "[ \"NURSEMO\", \"NURSEDY\", \"NURSEYR\" ]" })
                </div>
                <div>
                    <label class="ml-3 block text-sm font-medium leading-6 text-gray-900" asp-for="RENURSE"><span class="@pillNumberCSS">5</span> @Html.DisplayNameFor(Model => Model.RENURSE)</label>
                </div>
            </div>
            <div class="my-10 ml-20">
                <div class="subcounterreset">
                    <label class="text-base font-semibold text-gray-900">2b5a. Date permanently moved to nursing home</label>
                </div>
                <div>
                    <div class="sm:col-span-2">
                        <div>
                            <p class="text-sm text-gray-500 mt-3">(unknown = 99/99/YEAR REQUIRED)</p>
                            <div class="mt-2 inline-block">
                                <div class="w-20">
                                    <input placeholder="mm" asp-for="@Model.NURSEMO" />
                                </div>
                            </div>
                            <div class="mt-2 inline-block">
                                <div class="w-20">
                                    <input placeholder="dd" asp-for="@Model.NURSEDY" />
                                </div>
                            </div>
                            <div class="mt-2 inline-block">
                                <div class="w-40">
                                    <input placeholder="yyyy" asp-for="@Model.NURSEYR" />
                                </div>
                            </div>
                        </div>
                        <div>
                            <span class="mt-2 text-sm text-red-600 block" asp-validation-for="@Model.NURSEMO"></span>
                            <span class="mt-2 text-sm text-red-600 block" asp-validation-for="@Model.NURSEDY"></span>
                            <span class="mt-2 text-sm text-red-600 block" asp-validation-for="@Model.NURSEYR"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="flex items-top">
                <div>
                    @Html.CheckBox("REJOIN", Model.REJOIN, new { @class = "h-4 w-4 rounded border-gray-400 text-indigo-600 focus:ring-indigo-600 disabled:bg-slate-50 disabled:text-slate-500 disabled:border-slate-200 disabled:shadow-none" })
                </div>
                <div>
                    <label class="ml-3 block text-sm font-medium leading-6 text-gray-900" asp-for="REJOIN"><span class="@pillNumberCSS">6</span> @Html.DisplayNameFor(Model => Model.REJOIN)</label>
                </div>
            </div>
        </div>
    </div>
    <div class="@rowCSS subcounterreset">
        <div>
            <label class="text-base font-semibold leading-7 text-gray-900 text-lg">FTLD MODULE STATUS</label>
            <div>
                <div class="w-14 border-t-2 border-indigo-600"></div>
            </div>
        </div>
    </div>
    <div class="flex">
        <div class="flex">
            <div>
                <span class="counter"></span>
            </div>
            <div class="pl-3">
                @Html.CheckBox("FTLDDISC", Model.FTLDDISC, new { @class = "h-4 w-4 rounded border-gray-400 text-indigo-600 focus:ring-indigo-600 disabled:bg-slate-50 disabled:text-slate-500 disabled:border-slate-200 disabled:shadow-none" })
            </div>
        </div>
        <div class="ml-3 counterreset">
            <span class="@pillNumberCSS">1</span><label asp-for="@Model.FTLDDISC">@Html.DisplayNameFor(model => model.FTLDDISC)</label>
        </div>
    </div>
    <div class="flex my-6">
        <div class="mt-4">
            <label class="font-semibold"><span class="subcounter"></span></label>
        </div>
        <div class="ml-3 grow">
            <p class="text-sm text-gray-500" asp-description-for="@Model.FTLDREAS"></p>
            <radio-button-group id="FTLDREAS" for="FTLDREAS" items="Model.FTLDREASItems" ui-behaviors="@Model.FTLDREASBehavior"></radio-button-group>
            <span class="mt-2 text-sm text-red-600" asp-validation-for="@Model.FTLDREAS"></span>
            <div class="flex mt-3">
                <div class="font-semibold">
                    <label>3a1.</label>
                </div>
                <div class="ml-3 grow flex flex-col">
                    <div class="w-full">
                        <input asp-for="FTLDREAX" />
                    </div>
                    <div>
                        <span class="mt-2 text-sm text-red-600" asp-validation-for="@Model.FTLDREAX"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="boxB subcounterreset p-16 xl:space-y-20" data-controller="fancycheckboxes">
        <div class="text-center mb-20 w-full">
            <h2 class="mt-2 font-bold tracking-tight text-gray-900 sm:text-3xl">Box B</h2>
            <p class="text-base font-semibold leading-7 italic">No Further Contact</p>
        </div>
        <div class="my-3">
            <div class="flex">
                <div>
                    <span class="counter invisible"></span><span class="subcounter"></span>
                </div>
                <div class="mx-3">
                    @Html.CheckBox("DECEASED", Model.DECEASED, new { @class = "h-4 w-4 rounded border-gray-400 text-indigo-600 focus:ring-indigo-600 disabled:bg-slate-50 disabled:text-slate-500 disabled:border-slate-200 disabled:shadow-none", data_affects = "true", data_affects_toggle_targets = "[ \"DEATHMO\", \"DEATHDY\", \"DEATHYR\", \"AUTOPSY\" ]", data_fancycheckboxes_target = "checkbox" })
                </div>
                <div>
                    <label asp-for="@Model.DECEASED"><span class="@pillNumberCSS">Deceased</span> @Html.DisplayNameFor(model => model.DECEASED) <small class="@labelInstructionCSS normal-case">(Complete DEATH section)</small></label>
                    <div class="sm:col-span-2">
                        <span class="mt-2 text-sm text-red-600" asp-validation-for="@Model.DECEASED"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="my-3">
            <div class="flex">
                <div>
                    <span class="subcounter"></span>
                </div>
                <div class="mx-3">
                    @Html.CheckBox("DISCONT", Model.DISCONT, new { @class = "h-4 w-4 rounded border-gray-400 text-indigo-600 focus:ring-indigo-600 disabled:bg-slate-50 disabled:text-slate-500 disabled:border-slate-200 disabled:shadow-none", data_affects = "true", data_affects_toggle_targets = "[ \"DISCMO\", \"DISCDAY\", \"DISCYR\", \"DROPREAS\" ]", data_fancycheckboxes_target = "checkbox" })
                </div>
                <div>
                    <label asp-for="@Model.DISCONT"><span class="@pillNumberCSS">Withdrawn</span> @Html.DisplayNameFor(model => model.DISCONT) <small class="@labelInstructionCSS normal-case">(Complete DROPPED section)</small></label>
                    <div class="sm:col-span-2">
                        <span class="mt-2 text-sm text-red-600" asp-validation-for="@Model.DISCONT"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="bg-white">
            <div class="max-w-7xl px-6 lg:px-8">
                <div class="mx-auto mt-16 max-w-2xl rounded-3xl ring-1 ring-gray-200 sm:mt-20 lg:mx-0 lg:flex lg:max-w-none bg-slate-50">
                    <div class="p-8 sm:p-10 lg:flex-auto subcounterreset">
                        <h3 class="text-2xl font-bold tracking-tight text-gray-900"><span class="counter"> </span>Death</h3>
                        <div>
                            <div>
                                <div class="w-14 border-t-2 border-indigo-600"></div>
                            </div>
                        </div>
                        <div class="@rowCSS">
                            <div>
                                <label class="text-base font-semibold text-gray-900"><span class="subcounter"> </span>Date of death</label>
                            </div>
                            <div class="sm:col-span-2">
                                <div>
                                    <p class="text-sm text-gray-500">Unknown = 99/99/YEAR REQUIRED</p>
                                    <div class="mt-2 inline-block">
                                        <div class="w-20">
                                            <input placeholder="mm" asp-for="DEATHMO" />
                                        </div>
                                    </div>
                                    <div class="mt-2 inline-block">
                                        <div class="w-20">
                                            <input placeholder="dd" asp-for="DEATHDY" />
                                        </div>
                                    </div>
                                    <div class="mt-2 inline-block">
                                        <div class="w-40">
                                            <input placeholder="yyyy" asp-for="DEATHYR" />
                                        </div>
                                    </div>
                                </div>
                                <div>
                                    <span class="mt-2 text-sm text-red-600 block" asp-validation-for="@Model.DEATHMO"></span>
                                    <span class="mt-2 text-sm text-red-600 block" asp-validation-for="@Model.DEATHDY"></span>
                                    <span class="mt-2 text-sm text-red-600 block" asp-validation-for="@Model.DEATHYR"></span>
                                </div>
                            </div>
                        </div>
                        <div class="@rowCSS">
                            <div>
                                <label asp-for="AUTOPSY"><span class="subcounter"></span> @Html.DisplayNameFor(model => model.AUTOPSY)</label>
                                <span class="mt-2 text-sm text-red-600" asp-validation-for="@Model.AUTOPSY"></span>
                            </div>
                            <div class="sm:col-span-2">
                                <radio-button-group id="AUTOPSY" for="AUTOPSY" items="Model.AutopsyItems"></radio-button-group>
                            </div>
                        </div>
                        <div class="@rowCSS mt-5">
                            <div class="col-span-3 text-center">
                                <span class="text-base font-semibold text-indigo-600 italic">END FORM HERE</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="bg-white">
            <div class="max-w-7xl px-6 lg:px-8">
                <div class="mx-auto mt-16 max-w-2xl rounded-3xl ring-1 ring-gray-200 sm:mt-20 lg:mx-0 lg:flex lg:max-w-none bg-slate-50">
                    <div class="p-8 sm:p-10 lg:flex-auto">
                        <h3 class="text-2xl font-bold tracking-tight text-gray-900"><span class="counter"></span> Dropped</h3>
                        <div>
                            <div>
                                <div class="w-14 border-t-2 border-indigo-600"></div>
                            </div>
                        </div>
                        <p class="mt-6 text-base leading-7 font-semibold text-indigo-600 italic"><u>DO NOT</u> fill out this section if the participant has consented to autopsy or if you will maintain minimal contact. Instead, fill out <u>BOX A QUESTION 2 UDS STATUS</u> section.</p>
                        <div>
                            <div class="@rowCSS subcounterreset">
                                <div>
                                    <label class="text-base font-semibold text-gray-900"><span class="subcounter"></span> Date dropped from ADC</label>
                                </div>
                                <div>
                                    <div class="sm:col-span-2">
                                        <div>
                                            <p class="text-sm text-gray-500">Unknown = 99/99/YEAR REQUIRED</p>
                                            <div class="mt-2 inline-block">
                                                <div class="w-20">
                                                    <input placeholder="mm" asp-for="@Model.DISCMO" />
                                                </div>
                                            </div>
                                            <div class="mt-2 inline-block">
                                                <div class="w-20">
                                                    <input placeholder="dd" asp-for="@Model.DISCDAY" />
                                                </div>
                                            </div>
                                            <div class="mt-2 inline-block">
                                                <div class="w-40">
                                                    <input placeholder="yyyy" asp-for="@Model.DISCYR" />
                                                </div>
                                            </div>
                                        </div>
                                        <div>
                                            <span class="mt-2 text-sm text-red-600 block" asp-validation-for="@Model.DISCMO"></span>
                                            <span class="mt-2 text-sm text-red-600 block" asp-validation-for="@Model.DISCDAY"></span>
                                            <span class="mt-2 text-sm text-red-600 block" asp-validation-for="@Model.DISCYR"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="@rowCSS">
                                <div>
                                    <label asp-for="DROPREAS"><span class="subcounter"></span> @Html.DisplayNameFor(model => model.DROPREAS)<small class="@labelInstructionCSS">(CHECK ONE)</small></label>
                                    <span class="mt-2 text-sm text-red-600" asp-validation-for="@Model.DROPREAS"></span>
                                </div>
                                <div class="col-span-2">
                                    <radio-button-group id="DROPREAS" for="DROPREAS" items="Model.DropReasonItems"></radio-button-group>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<input type="hidden" asp-for="ParticipationId" />
<input type="hidden" asp-for="CreatedAt" />
<input type="hidden" asp-for="CreatedBy" />
<input type="hidden" asp-for="Status" />
<input type="hidden" asp-for="IsDeleted" />
<input type="hidden" asp-for="Id" />
<input type="hidden" asp-for="ModifiedBy" />
