@model RxNormLookupModel
@{
}



<turbo-frame id="_RxNorm">
    @if (Model.SearchResults != null && Model.SearchResults.Count() > 0)
    {
        <div class="absolute z-10 mx-auto max-w-xl transform rounded-xl bg-white p-2 ring-1 shadow-2xl ring-black/5 transition-all">
            <a href="~/UDS4/A4/@Model.VisitId?handler=RxNormSearch&searchTerm=@Model.SearchTerm">Back</a>
            @foreach (var result in Model.SearchResults)
            {
                <div class="space-y-3">
                    <div class="md:flex md:items-center md:justify-between gap-x-6 py-5">
                        <div class="min-w-0">
                            <p class="text-sm/6 text-gray-900">
                                @result.Key
                            </p>
                        </div>
                        <div class="flex flex-none items-center gap-x-4">
                            <div class="text-sm/6 font-semibold text-gray-900">@result.Value</div>
                            <form method="post" action="~/UDS4/A4/@Model.VisitId?handler=RxNormSelect">
                                <input type="hidden" name="id" value="@Model.VisitId" />
                                <input type="hidden" name="rxCUI" value="@result.Value" />
                                <input type="hidden" name="drugName" value="@result.Key" />
                                @for (int i = 0; i < Model.CachedDrugCodes.Count(); i++)
                                {
                                    <input asp-for="CachedDrugCodes[i].Id" type="hidden" />
                                    <input asp-for="CachedDrugCodes[i].RxNormId" type="hidden" />
                                    <input asp-for="CachedDrugCodes[i].DrugName" type="hidden" />
                                    <input asp-for="CachedDrugCodes[i].BrandName" type="hidden" />
                                    <input asp-for="CachedDrugCodes[i].IsOverTheCounter" type="hidden" />
                                    <input asp-for="CachedDrugCodes[i].IsPopular" type="hidden" />
                                    <input asp-for="CachedDrugCodes[i].IsSelected" type="hidden" value="true" />
                                }
                                <button type="submit" class="inline-flex items-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-xs hover:bg-indigo-700 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Select</button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</turbo-frame>


