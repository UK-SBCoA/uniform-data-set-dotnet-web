@page
@model UDS.Net.Forms.Pages.PacketSubmissions.BulkPacketSubmission.IndexModel
@{
    ViewData["Title"] = "Bulk Packet Submission";
}

<div>
    <div class="mx-auto max-w-12xl px-4 sm:px-6 lg:px-8">
        <h2 class="text-xl font-semibold text-gray-900">Bulk packet submission</h2>
        <p class="mt-2 text-sm text-gray-700">Upload the full error CSV returned from NACC</p>
    </div>
    <turbo-frame id="BulkPacketSubmission">
        <form method="post" asp-page="Create" asp-page-handler="DisplayBulkSubmission" enctype="multipart/form-data">
            <div class="grid grid-cols-4">
                <div class="col-start-2 col-span-2 grid gap-4">
                    <div>
                        <div>
                            <input required asp-for="ErrorFileUpload" type="file" class="flex justify-center rounded-md w-full min-h-16 bg-gray-200 inline-flex items-center px-3 py-2 text-sm font-semibold text-black shadow-sm" />
                        </div>
                        <div class="grid grid-cols-2 justify-items-center p-3">
                            <button type="submit" class="rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
                                Submit File
                            </button>
                            <a href="/Packets/Index" class="rounded-md bg-gray-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-gray-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-gray-600">
                                Cancel
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </turbo-frame>
</div>
