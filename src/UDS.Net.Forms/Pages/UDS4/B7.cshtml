                    <td>
                        <label asp-for="B7.BILLS"><span class="counter"></span> @Html.DisplayNameFor(m => m.B7.BILLS)</label>
                        <p class="text-sm text-gray-500" asp-description-for="B7.BILLS"></p>
                        <span class="mt-2 text-sm text-red-600" asp-validation-for="B7.BILLS"></span>
                    </td>
                    <table-cell-radio-buttons id="@Html.IdFor(m => m.B7.BILLS)" for="@Model.B7.BILLS" items="Model.ListItems"></table-cell-radio-buttons>
