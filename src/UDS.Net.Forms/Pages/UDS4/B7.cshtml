                    @foreach (var item in Model.ListItems)
                    {
                        <th class="w-20 py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-0">@item.Text</th>
                    }
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
