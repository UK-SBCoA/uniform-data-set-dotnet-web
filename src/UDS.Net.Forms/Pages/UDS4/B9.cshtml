            <radio-button-group id="@Html.IdFor(m => m.B9.DECCLCOG)" for="@Model.B9.DECCLCOG" items="Model.DECCLCOGListItems"></radio-button-group>
            <span class="mt-2 text-sm text-red-600" asp-validation-for="B9.DECCLCOG"></span>
        </div>
    </div>
</div>
<div class="mt-10 space-y-8 pb-12 sm:space-y-0 sm:divide-y sm:divide-gray-900/10 sm:pb-0">
    <div class="sm:grid sm:grid-cols-1 sm:items-start sm:gap-4 sm:py-6">
        <p><span class="counter"></span> Indicate whether the participant is meaningfully impaired in the following cognitive domains or has fluctuating cognition:</p>
    </div>
</div>
<div class="relative overflow-x-auto shadow-md sm:rounded-lg">
    <table class="[&_th]:p-5 [&_td]:p-5 w-full text-left text-gray-500 dark:text-gray-400">
        <thead class="text-gray-700 bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
            <tr>
                <th colspan="2">Cognitive</th>
                <th>No</th>
                <th>Yes</th>
                <th>Unknown</th>
            </tr>
        </thead>
        <tbody class="subcounterreset">
            <tr>
                <td colspan="2">
                    <div>
                        <label asp-for="B9.COGMEM"><span class="subcounter"></span> @Html.DisplayNameFor(m => m.B9.COGMEM)</label>
                        <span class="mt-2 text-sm text-red-600" asp-validation-for="B9.COGMEM"></span>
                    </div>
                </td>
                <table-cell-radio-buttons id="B9.COGMEM" for="@Model.B9.COGMEM" items="Model.BasicYesNoListItems"></table-cell-radio-buttons>
            </tr>
            <tr>
                <td colspan="2">
                    <div>
                        <label asp-for="B9.COGORI"><span class="subcounter"></span> @Html.DisplayNameFor(m => m.B9.COGORI)</label>
                        <span class="mt-2 text-sm text-red-600" asp-validation-for="B9.COGORI"></span>
                    </div>
                </td>
                <table-cell-radio-buttons id="B9.COGORI" for="@Model.B9.COGORI" items="Model.BasicYesNoListItems"></table-cell-radio-buttons>
            </tr>
            <tr>
                <td colspan="2">
                    <div>
                        <label asp-for="B9.COGJUDG"><span class="subcounter"></span> @Html.DisplayNameFor(m => m.B9.COGJUDG)</label>
                        <span class="mt-2 text-sm text-red-600" asp-validation-for="B9.COGJUDG"></span>
                    </div>
                </td>
                <table-cell-radio-buttons id="B9.COGJUDG" for="@Model.B9.COGJUDG" items="Model.BasicYesNoListItems"></table-cell-radio-buttons>
            </tr>
            <tr>
                <td colspan="2">
                    <div>
                        <label asp-for="B9.COGLANG"><span class="subcounter"></span> @Html.DisplayNameFor(m => m.B9.COGLANG)</label>
                        <span class="mt-2 text-sm text-red-600" asp-validation-for="B9.COGLANG"></span>
