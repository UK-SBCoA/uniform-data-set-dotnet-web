        <div class="p-1">
            <p class="italic mt-2 text-sm text-gray-700">Reported by participant</p>
        </div>
        <div class="sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:py-6">
            <label asp-for="B9.DECCOG"><span class="counter"></span> @Html.DisplayNameFor(m => m.B9.DECCOG)</label>
            <div class="mt-4 sm:col-span-2 sm:mt-0">
                <p class="text-sm text-gray-500" asp-description-for="@Model.B9.DECCOG"></p>
                <radio-button-group id="@Html.IdFor(m => m.B9.DECCOG)" for="@Model.B9.DECCOG" items="Model.MemoryDeclineListItems"></radio-button-group>
                <span class="mt-2 text-sm text-red-600" asp-validation-for="B9.DECCOG"></span>
            </div>
        </div>
        <div class="sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:py-6">
            <label asp-for="B9.DECMOT"><span class="counter"></span> @Html.DisplayNameFor(m => m.B9.DECMOT)</label>
            <div class="mt-4 sm:col-span-2 sm:mt-0">
