                </td>
                <table-cell-radio-buttons id="B9.COGLANG" for="@Model.B9.COGLANG" items="Model.BasicYesNoListItems"></table-cell-radio-buttons>
            </tr>
            <tr>
                <td colspan="2">
                    <div>
                        <label asp-for="B9.COGVIS"><span class="subcounter"></span> @Html.DisplayNameFor(m => m.B9.COGVIS)</label>
                        <span class="mt-2 text-sm text-red-600" asp-validation-for="B9.COGVIS"></span>
                    </div>
                </td>
                <table-cell-radio-buttons id="B9.COGVIS" for="@Model.B9.COGVIS" items="Model.BasicYesNoListItems"></table-cell-radio-buttons>
            </tr>
            <tr>
                <td colspan="2">
                    <div>
                        <label asp-for="B9.COGATTN"><span class="subcounter"></span> @Html.DisplayNameFor(m => m.B9.COGATTN)</label>
                        <span class="mt-2 text-sm text-red-600" asp-validation-for="B9.COGATTN"></span>
                    </div>
                </td>
                <table-cell-radio-buttons id="B9.COGATTN" for="@Model.B9.COGATTN" items="Model.BasicYesNoListItems"></table-cell-radio-buttons>
            </tr>
            <tr>
                <td colspan="2">
                    <div>
                        <label asp-for="B9.COGFLUC"><span class="subcounter"></span> @Html.DisplayNameFor(m => m.B9.COGFLUC)</label>
                        <span class="mt-2 text-sm text-red-600" asp-validation-for="B9.COGFLUC"></span>
                    </div>
                </td>
                <table-cell-radio-buttons id="B9.COGFLUC" for="@Model.B9.COGFLUC" items="Model.BasicYesNoListItems"></table-cell-radio-buttons>
            </tr>
            <tr>
                <td colspan="2">
                    <div>
                        <label asp-for="B9.COGOTHR"><span class="subcounter"></span> @Html.DisplayNameFor(m => m.B9.COGOTHR)</label>
                        <span class="mt-2 text-sm text-red-600" asp-validation-for="B9.COGOTHR"></span>
                    </div>
                </td>
                <table-cell-radio-buttons id="B9.COGOTHR" for="@Model.B9.COGOTHR" items="Model.BasicYesNoOtherListItems"></table-cell-radio-buttons>
            </tr>
            <tr>
                <td colspan="5">
                    <div class="grid grid-cols-3 ml-6">
                        <div>
                            <label asp-for="B9.COGOTHRX"><span class="subsubcounter"></span> @Html.DisplayNameFor(m => m.B9.COGOTHRX)</label>
                            <span class="mt-2 text-sm text-red-600" asp-validation-for="B9.COGOTHRX"></span>
                        </div>
                        <div>
                            <input asp-for="B9.COGOTHRX" />
                        </div>
                    </div>
                </td>
            </tr>
            <tr>
                <td colspan="5">
                    <div class="grid grid-cols-3">
                        <div>
                            <label asp-for="B9.COGAGE"><span class="subcounter"></span> @Html.DisplayNameFor(m => m.B9.COGAGE)</label>
                            <span class="mt-2 text-sm text-red-600" asp-validation-for="B9.COGAGE"></span>
                        </div>
                        <div>
                            <input asp-for="B9.COGAGE" />
                        </div>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
</div>
