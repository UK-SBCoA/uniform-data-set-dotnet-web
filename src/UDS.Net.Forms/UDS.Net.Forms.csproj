<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk.Razor">
	<PropertyGroup>
		<TargetFramework>net6.0</TargetFramework>
		<Nullable>enable</Nullable>
		<ImplicitUsings>enable</ImplicitUsings>
		<AddRazorSupportForMvc>true</AddRazorSupportForMvc>
		<PackageId>UDS.Net.Forms</PackageId>
		<Version>1.0.1</Version>
		<Authors>Sanders-Brown Center on Aging</Authors>
		<Description>UDS Forms razor class library</Description>
		<Owners>UK-SBCoA</Owners>
		<PackageDescription>Razor class library for rendering UDS forms</PackageDescription>
		<RepositoryUrl>https://github.com/UK-SBCoA/uniform-data-set-dotnet-web</RepositoryUrl>
		<ReleaseVersion>1.0.1</ReleaseVersion>
	</PropertyGroup>
	<ItemGroup>
		<FrameworkReference Include="Microsoft.AspNetCore.App" />
	</ItemGroup>
	<ItemGroup>
		<ProjectReference Include="..\UDS.Net.Services\UDS.Net.Services.csproj" />
	</ItemGroup>
	<ItemGroup>
		<SupportedPlatform Include="browser" />
	</ItemGroup>
	<ItemGroup>
		<PackageReference Include="Microsoft.AspNetCore.Mvc.Razor.RuntimeCompilation" Version="6.0.0" />
	</ItemGroup>
	<ItemGroup>
		<Content Remove="wwwroot\js\" />
		<Content Remove="wwwroot\lib\" />
		<Content Remove="wwwroot\lib\tailwindcss\" />
		<Content Remove="wwwroot\css\" />
		<Content Remove="wwwroot\lib\jquery-validation-unobtrusive\" />
	</ItemGroup>
	<ItemGroup>
		<Folder Include="wwwroot\js\" />
		<Folder Include="wwwroot\lib\" />
		<Folder Include="wwwroot\lib\tailwindcss\" />
		<Folder Include="wwwroot\css\" />
		<Folder Include="Models\PageModels\" />
		<Folder Include="Pages\Shared\DisplayTemplates\" />
		<Folder Include="Pages\Shared\EditorTemplates\" />
		<Folder Include="TagHelpers\" />
		<Folder Include="wwwroot\lib\jquery-validation-unobtrusive\" />
		<Folder Include="DataAnnotations\" />
		<Folder Include="HtmlHelpers\" />
	</ItemGroup>
	<ItemGroup>
		<None Remove="Models\PageModels\" />
		<None Remove="Pages\Shared\DisplayTemplates\" />
		<None Remove="Pages\Shared\EditorTemplates\" />
		<None Remove="TagHelpers\" />
		<None Remove="DataAnnotations\" />
		<None Remove="HtmlHelpers\" />
	</ItemGroup>
</Project>