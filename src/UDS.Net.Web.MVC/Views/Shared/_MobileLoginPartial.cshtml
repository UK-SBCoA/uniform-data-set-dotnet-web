@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <div data-mobilemenu-target="menu" class="lg:hidden" id="mobile-menu" style="display: none;">
        <div class="space-y-1 px-2 pt-2 pb-3">
            <partial name="_MainMenuItems" model="@(new MenuItemViewModel() { IsMobile = true })"></partial>
        </div>
        <div class="border-t border-indigo-700 pt-4 pb-3">
            <div class="flex items-center px-5">
                <div class="flex-shrink-0">
                    <img class="h-10 w-10 rounded-full" src="https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80" alt="">
                </div>
                <div class="ml-3">
                    <div class="text-base font-medium text-white">@User.Identity?.Name</div>
                    <div class="text-sm font-medium text-indigo-300">@User.Identity?.Name</div>
                </div>
                <partial name="_NotificationsPartial"></partial>
            </div>
            <div class="mt-3 space-y-1 px-2">
                <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage" class="block rounded-md py-2 px-3 text-base font-medium text-white hover:bg-indigo-500 hover:bg-opacity-75" role="menuitem" tabindex="-1" id="user-menu-item-1">Settings</a>
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="block w-full text-left rounded-md py-2 px-3 text-base font-medium text-white hover:bg-indigo-500 hover:bg-opacity-75">Logout</button>
                </form>
            </div>
        </div>
    </div>
}